<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">
    <!--
        Added the constraints for entity Album.
    -->
    <changeSet id="20180128235447-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="albums_id"
                                 baseTableName="album_playlist"
                                 constraintName="fk_album_playlist_albums_id"
                                 referencedColumnNames="id"
                                 referencedTableName="album"/>
        <addForeignKeyConstraint baseColumnNames="playlists_id"
                                 baseTableName="album_playlist"
                                 constraintName="fk_album_playlist_playlists_id"
                                 referencedColumnNames="id"
                                 referencedTableName="playlist"/>
        
        <addForeignKeyConstraint baseColumnNames="artist_id"
                                 baseTableName="album"
                                 constraintName="fk_album_artist_id"
                                 referencedColumnNames="id"
                                 referencedTableName="artist"/>

    </changeSet>
</databaseChangeLog>
